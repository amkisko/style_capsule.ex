    </style>
    <%= raw StyleCapsule.Phoenix.render_styles(namespace: :app) %>
    <%= raw StyleCapsule.Phoenix.render_styles(namespace: :admin) %>
  </head>
  <body>
    <header>
      <section class="container">
        <nav>
          <ul>
            <li><a href="/">Home</a></li>
          </ul>
        </nav>
      </section>
    </header>
    <main role="main" class="container">
      <.flash_group flash={@flash} />
      <%= @inner_content %>
    </main>
  </body>
</html>

